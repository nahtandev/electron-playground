{
  "name": "electron-playground",
  "productName": "electron-playground",
  "version": "1.0.0",
  "description": "An Electron boilerplate. Built with ReactJS & Express JS",
  "main": ".vite/build/main.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "electron-forge start",
    "start:dev": "concurrently -n \"client,server\" -c \"blue,yellow,green\" \"npm run dev:client\" \"npm run server:dev\"",
    "package": "npm run build &&  electron-forge package",
    "make": "npm run build && electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "build:client": "cd client && vite build",
    "dev:client": "cd client && vite dev --host",
    "build:main": "cd server && vite build",
    "build:preloader": "cd preloader && vite build",
    "build": "npm run build:client && npm run build:main && npm run build:preloader",
    "server:dev": "cd server && vite build --watch",
    "rebuild": "electron-rebuild -f -w better-sqlite3 -v 29.4.6 -a x64 --build-from-source true"
  },
  "keywords": [],
  "author": {
    "name": "nahtandev",
    "email": "sayme@hellonathan.dev"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.7.0",
    "@electron-forge/maker-deb": "^7.7.0",
    "@electron-forge/maker-rpm": "^7.7.0",
    "@electron-forge/maker-squirrel": "^7.7.0",
    "@electron-forge/maker-zip": "^7.7.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.7.0",
    "@electron-forge/plugin-fuses": "^7.7.0",
    "@electron-forge/plugin-vite": "^7.7.0",
    "@electron/fuses": "^1.8.0",
    "@electron/rebuild": "^3.7.1",
    "@types/cors": "^2.8.17",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "29.4.6",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^15.14.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sass": "^1.85.1",
    "source-map-support": "^0.5.21",
    "tree-kill": "^1.2.2",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.8.2",
    "vite": "^5.4.14"
  },
  "dependencies": {
    "@types/react-router-dom": "^5.3.3",
    "better-sqlite3": "^11.8.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "electron-log": "^5.3.1",
    "electron-squirrel-startup": "^1.0.1",
    "@electron/asar": "^3.3.1",
    "express": "^4.21.2",
    "react-router-dom": "^7.2.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.21"
  }
}
