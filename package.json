{
  "name": "electron-playground",
  "version": "0.0.1",
  "description": "Electron Playground using NextJS & NestJS",
  "main": "build/electron/main.js",
  "scripts": {
    "compile": "tsc && rimraf build/electron/index.html",
    "start": "cross-env NODE_ENV=production npm run compile && electron .",
    "dev": "cross-env NODE_ENV=development concurrently \"cd client && npm run dev\" \"tsc -w\" \"npm run dev:electron\"",
    "dev:electron": "wait-on tcp:3000 && electron .",
    "build": "npm run build:all && npm run build:electron",
    "build:all": "concurrently \"npm run build:next\" \"npm run build:nest\" \"npm run compile\"",
    "build:next": "cd client && npm run build",
    "build:nest": "cd server && npm run build",
    "build:electron": "electron-builder",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,html,css,md}\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": {
    "name": "nahtandev",
    "email": "sayme@hellonathan.dev"
  },
  "license": "MIT",
  "workspaces": [
    "client",
    "server"
  ],
  "build": {
    "appId": "com.nahtandev.electron-playground",
    "productName": "Electron Playground",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "build/**/*",
      "client/out/**/*",
      "server/dist/**/*",
      "server/package.json"
    ],
    "extraResources": [
      {
        "from": "server/dist",
        "to": "server/dist",
        "filter": ["**/*"]
      },
      {
        "from": "server/node_modules",
        "to": "server/node_modules",
        "filter": ["**/*"]
      }
    ],
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Development"
    }
  },
  "devDependencies": {
    "electron": "^34.3.0",
    "electron-builder": "^25.1.8",
    "electron-reload": "^1.5.0",
    "concurrently": "^8.2.2",
    "@types/node": "^20.11.0",
    "@types/wait-on": "^5.3.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "cross-env": "^7.0.3",
    "wait-on": "^7.2.0",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "typescript": "^5.7.3"
  }
}
